@model IEnumerable<JuiceLifeProj.OutGoing>
@{
    ViewBag.Title = "Outgoing";
}
<br />
<h2>Outgoings</h2>
<p>
    @Html.ActionLink("Create New", "Create", new object { }, new { @class = "btn btn-primary" })
</p>
@Html.ActionLink("Export to Excel", "Reports", new { ReportType = "Excel" }) |
@Html.ActionLink("Export to PDF", "Reports", new { ReportType = "PDF" }) |
@Html.ActionLink("Export to Word", "Reports", new { ReportType = "Word" }) |
@Html.ActionLink("Export to Image", "Reports", new { ReportType = "Image" })
<br /><br />
<table class="table table-hover">
    <tr  class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.EmpSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchasedFood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UtilityBills)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransportCost)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="table-active">
            <td>
                @Html.DisplayFor(modelItem => item.EmpSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasedFood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UtilityBills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportCost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OutGoingId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.OutGoingId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OutGoingId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
